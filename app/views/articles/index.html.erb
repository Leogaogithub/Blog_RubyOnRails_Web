<h1>Listing Articles</h1>
<%= link_to 'New article', new_article_path, class: 'btn btn-success'%>
<table class="table table-bordered">
  <tr >
  	<th colspan="1"></th>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>	
	  <td><%=image_tag "/assets/"+String(article.id%5)+".jpg", class:"img-circle img-responsive img-thumbnail",width:60,height:60 %></td>	  
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', article_path(article), class: 'btn btn-info'%></td>
      <td><%= link_to 'Edit', edit_article_path(article) , class: 'btn btn-warning'%></td>
      <td><%= link_to 'Destroy', article_path(article),
              method: :delete,
              data: { confirm: 'Are you sure?' } ,class: 'btn btn-danger'%></td>
    </tr>
  <% end %>
</table>